            pos_hint: {"center_x": 0.5, "center_y": 0.52}

            size_hint_x: 0.85
            line_color_focus: 0,0,0,1
            password: True
        
        
        MDTextField:
            id: input_email
            hint_text: "Correo electronico"
            helper_text: ""
            pos_hint: {"center_x": 0.5, "center_y": 0.52}

            size_hint_x: 0.85
            line_color_focus: 0,0,0,1


        MDTextField:
            id: input_password
            hint_text: "Contrase침a"
